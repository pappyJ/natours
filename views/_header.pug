
//- Header

header.header

    nav.nav.nav--tours

        a(href="/").nav__el All tours

    .header__logo

        img(src='/img/logo-white.png' alt='Natours logo')

    nav.nav.nav--user

        if user

            a.nav__el.nav__el--logout LOG OUT

            a(href="/me").nav__el

                img(src=`/img/users/${user.photo}` alt=`${user.name}`).nav__user-img

                span= user.name.split(' ')[0]
            
        else

            a.nav__el(href="/login") Log In
            
            a.nav__el.nav__el--cta(href="/signup") Sign Up